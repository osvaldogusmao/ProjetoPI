<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="ProjetoPI">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>br.com.unifeob.app.entidades.Login</class>
    <class>br.com.unifeob.app.entidades.INSS</class>
    <class>br.com.unifeob.app.entidades.Empresa</class>
    <class>br.com.unifeob.app.entidades.IRRF</class>
    <class>br.com.unifeob.app.entidades.Dependente</class>
    <class>br.com.unifeob.app.entidades.Cargo</class>
    <class>br.com.unifeob.app.entidades.Pessoa</class>
    <class>br.com.unifeob.app.entidades.MesVigente</class>


    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/projetopi"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCachesProvider"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>